---
import "@styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { AstroSeo } from "@astrolib/seo"
const baseURL = "https://mitchpruitt.com"
const currentPath = Astro.url.pathname;
const {pageTitle, headerColor, footer, description, ogImage=""} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<AstroSeo 
		title={pageTitle}
		titleTemplate="Mitch Pruitt | %s"
		description={description}
		canonical={baseURL}
		openGraph={{
			type: "website",
			url: baseURL + currentPath,
			title: `Mitch Pruitt | ${pageTitle}`,
			site_name: "mitchpruitt.com",
			images: [
				{
					url: `${baseURL}/og/${ogImage}`,
					secureUrl: `${baseURL}/og/${ogImage}`,
					width: 1200,
					height: 630,
					type: 'image/jpg',
				},
			]
		}}
		additionalMetaTags={[
			{
				name: 'viewport',
				content: 'width=device-width'
			}, {
				name: 'generator',
				content: Astro.generator
			}, {
				name: 'charset',
				content: 'utf-8'
			}
		]}
		additionalLinkTags={[
			{
				rel: 'stylesheet',
				href: 'https://use.typekit.net/god4dlz.css'
			},
			{
				rel: 'sitemap',
				href: `${baseURL}/sitemap-index.xml`
			}
		]}
	/>
	<head>
		<noscript>
			<style>
				main {
					visibility: visible !important;
				}
			</style>
		</noscript>
	</head>
	<body>
		<Header headerColor={headerColor}/>
		<main>
			<slot />
		</main>
		<Footer display={footer}/>
	</body>
</html>