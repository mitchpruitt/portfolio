---
import BaseLayout from "./BaseLayout.astro";
import MetaItem from "../components/MetaItem.astro";
import { Image } from "astro:assets";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={"Mitch Pruitt | " + frontmatter.title}>
    <div class="project-image">
        <Image src={frontmatter.cover} alt={frontmatter.coverAlt} />
    </div>
    <section class="content" transition:animate="fade">
        <div class="project-header-grid">
            <header class="project-header">
                <h1 class="title">{frontmatter.title}</h1>
                <h2 class="subtitle">{frontmatter.subtitle}</h2>
            </header>
            <p class="description">{frontmatter.description}</p>
            <ul class="meta">
                <MetaItem label="Role" value={frontmatter.role} />
                <MetaItem label="Client" value={frontmatter.client} />
                <MetaItem label="Year" value={frontmatter.year} />
                <MetaItem label="Team" value={frontmatter.studio} />
            </ul>
        </div>
        <slot />
    </section>
</BaseLayout>

<style>
    .project-image {
        margin-top: -82px;
        width: 100%;
        height: 50vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 40px;

        img {
            width: 100%;
        }
    }

    .project-header-grid {
        display: grid;
        grid-template-columns: 3fr 1fr;
        margin-bottom: var(--h-padding);
        row-gap: var(--h-padding);
        column-gap: 60px;
        grid-template-areas: "header header"
                             "description meta";
    }

    .project-header {
        grid-area: header;

        .title {
            font-variation-settings: var(--wide-semibold);
            font-size: 56px;
        }

        .subtitle {
            font-variation-settings: var(--extra-light);
            font-size: 24px;
        }

    }


    .description {
        font-size: 24px;
        line-height: 30px;
        font-variation-settings: var(--wide-light);
        grid-area: description;
    }

    .meta {
        list-style-type: none;
        font-size: 15px;
        display: flex;
        flex-direction: column;
        gap: 20px;

        .meta-item {
            font-variation-settings: var(--wide);
            label {
                font-variation-settings: var(--wide-semibold);
            }
        }
    }

    @media only screen and (max-width:800px) { 

    .project-image {
        height: 50%;
        margin-top: 0;
    }

    .project-header-grid {
        grid-template-columns: 1fr;
        grid-template-areas: "header"
                            "description"
                            "meta";
    }
}
</style>