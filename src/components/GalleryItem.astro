---
import { Image } from "astro:assets";
const {image, caption, width = "", height = ""} = Astro.props;

---

<a class="gallery-item" href={image.src} title={caption}>
    <Image src={image} width={width} height={height} alt={caption} />
</a>

<style>
    .gallery-item {
        border-radius: 4px;
        overflow: hidden;
    }
</style>