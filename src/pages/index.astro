---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectLink from "../components/ProjectItem.astro";

const pageTitle = "Mitch Pruitt | Designer & Developer"

const allProjects = await Astro.glob('./projects/*.md');
---

<BaseLayout pageTitle={pageTitle}>
	<section class="content" transition:animate="fade">
		<ul class="project-list">
			{allProjects.map((project) => 
				<ProjectLink url={project.url}  title={project.frontmatter.title} subtitle={project.frontmatter.subtitle} />
			)}
		</ul>
	</section>
</BaseLayout>